{
  "name": "pnc-ui-release-tests",
  "version": "1.4.0",
  "description": "Automated release tests for PNC through Web UI",
  "config": {
    "protractorConf": "protractor.config.js"
  },
  "scripts": {
    "test": "npm run lint",
    "test-suite": "protractor $npm_package_config_protractorConf --specs=$npm_package_config_specs --suites=$npm_package_config_suites",
    "test-suite:dev": "protractor $npm_package_config_protractorConf --specs=$npm_package_config_specs --suites=$npm_package_config_suites; npm run webdriver:shutdown",
    "lint": "eslint src/**/*.js tests/**/*.js protractor.config.js",
    "webdriver": "./node_modules/protractor/bin/webdriver-manager",
    "webdriver:update": "npm run webdriver -- update",
    "webdriver:shutdown": "npm run webdriver -- shutdown"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/project-ncl/pnc-ui-release-tests.git"
  },
  "author": "Alex Creasy",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/project-ncl/pnc-ui-release-tests/issues"
  },
  "homepage": "https://github.com/project-ncl/pnc-ui-release-tests#readme",
  "dependencies": {
    "npm": "^6.3.0",
    "node": "^9.7.1",
    "protractor": "^5.4.0"
  },
  "devDependencies": {
    "eslint": "^5.3.0"
  }
}
